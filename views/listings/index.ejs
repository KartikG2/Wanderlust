<% layout("/layouts/boilerplate") %>
<body>
    <h1>All listings</h1>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
        <% for (listing of allListings) {%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%=listing.Image%>" class="card-img-top" alt="listing_image"  style="height:15rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%></b>
                            <br>
                            &#x20B9 <%= listing.price.toLocaleString("en-IN") %> / night
                        </p>
                    </div>
                  </div>
            </a> 
        <% } %>
    </div>
   

</body>
